    <parser name="JvmMetricParser" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityJsonParser" default-data-type="AsInput">
        <field name="EventName" value="JVM metrics"/>
        <field name="EventType" value="EVENT"/>
        <field name="CpuLoad" locator="$.['java.lang:SystemCpuLoad']" locator-type="Label"/>
        <field name="LoadedClasses" locator="$.['java.lang:TotalLoadedClassCount']" locator-type="Label"/>
        <field name="ProcessCpuLoad" locator="$.['java.lang:ProcessCpuLoad']" locator-type="Label"/>
        <field name="FreeSwapSpaceSize" locator="$.['java.lang:FreeSwapSpaceSize']" locator-type="Label"/>
        <field name="FreePhysicalMemorySize" locator="$.['java.lang:FreePhysicalMemorySize']" locator-type="Label"/>
        <field name="TotalSwapSpaceSize" locator="$.['java.lang:TotalSwapSpaceSize']" locator-type="Label"/>
        <field name="TotalPhysicalMemorySize" locator="$.['java.lang:TotalPhysicalMemorySize']" locator-type="Label"/>
    </parser>

    <parser name="TNTJSONParser" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityJsonParser" default-data-type="AsInput">
        <property name="ActivityDelim" value="EOF"/>

        <field name="InterceptionsMetricsData" locator="$.msg-text" locator-type="Label" transparent="true">
            <parser-ref name="KafkaInterceptMetricsParser" aggregation="Merge">
                <matchExp>JPATH:$.Topic</matchExp>
            </parser-ref>

            <parser-ref name="KafkaConsumerMetrics" aggregation="Merge">
                <matchExp>JPATH:$.['kafka.consumer:fetch-latency-max']</matchExp>
            </parser-ref>

            <parser-ref name="KafkaProducerMetrics" aggregation="Merge">
                <matchExp>JPATH:$.['kafka.producer:response-rate']</matchExp>
            </parser-ref>

            <parser-ref name="JvmMetricParser" aggregation="Merge">
                <matchExp>JPATH:$.['java.lang:Version']</matchExp>
            </parser-ref>
        </field>
    </parser>

    <parser name="KafkaMessageParser" class="com.jkoolcloud.tnt4j.streams.parsers.KafkaConsumerRecordParser">
        <field name="TNTEventData" locator="value" locator-type="Label" transparent="true">
            <parser-ref name="TNTJSONParser" aggregation="Merge"/>
        </field>
    </parser>

    <stream name="KafkaMetricsStream" class="com.jkoolcloud.tnt4j.streams.inputs.KafkaConsumerStream">
        <property name="HaltIfNoParser" value="false"/>
        <property name="Topic" value="tnt4j_kafka_interceptor_metrics"/>
        <!--<property name="FileName" value="./tnt4j-streams-kafka/config/intercept/consumer.properties"/>-->

        <!-- Kafka consumer properties -->
        <property name="bootstrap.servers" value="localhost:9092"/>
        <property name="group.id" value="0"/>
        <property name="key.deserializer" value="org.apache.kafka.common.serialization.StringDeserializer"/>
        <property name="value.deserializer" value="org.apache.kafka.common.serialization.StringDeserializer"/>

        <parser-ref name="KafkaMessageParser"/>
    </stream>
</tnt-data-source>
