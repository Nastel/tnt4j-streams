<?xml version="1.0" encoding="utf-8"?>
<tnt-data-source
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Nastel/tnt4j-streams/master/config/tnt-data-source.xsd">

    <parser name="ExcelRowParser" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityExcelRowParser">
        <field name="EventType" value="EVENT"/>
        <field name="ApplName" value="smart-heater-users0"/>

        <field name="TrackingId" locator="A" locator-type="Label" datatype="String"/>
        <field name="UserName" locator="B" locator-type="Label" datatype="String"/>
        <field name="ServerIp" locator="C" locator-type="Label" datatype="String"/>
    </parser>

    <!--TODO: build wrapping activity for every new xlsx file read. if polling new activity on every poll. configurable. Make polling by file-->
    <!--name wildcard generic streaming feature-->
    <stream name="SmartHeaterUsersStream0" class="com.jkoolcloud.tnt4j.streams.inputs.ExcelRowStream">
        <property name="HaltIfNoParser" value="false"/>
        <property name="FileName" value="./tnt4j-streams-msoffice/samples/heater/adax-users.xlsx"/>
        <property name="RangeToStream" value="2:"/>
        <!--<property name="SheetsToProcess" value="Sheet*"/>-->
        <!--<property name="SheetsToProcess" value="Sheet(1|2)"/>-->
        <property name="GroupingActivityName" value="ADAX Users Import 0"/>

        <parser-ref name="ExcelRowParser"/>
    </stream>
</tnt-data-source>