<?xml version="1.0" encoding="utf-8"?>
<tnt-data-source
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Nastel/tnt4j-streams/master/config/tnt-data-source.xsd">

    <parser name="KafkaInterceptMetricsParser" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityJsonParser" default-data-type="AsInput">
        <property name="ActivityDelim" value="EOF"/>

        <field name="topic" locator="$.Topic" locator-type="Label" required="true"/>
        <field name="OperationType" locator="$.Type" locator-type="Label" transparent="true">
            <field-map source="ProducerTopicMetrics" target="Producer"/>
            <field-map source="ConsumerTopicMetrics" target="Consumer"/>
        </field>

        <field name="EventType" value="EVENT"/>
        <field name="EventName" formattingPattern="Metrics of {0} {1}">
            <field-locator locator="$.Topic" locator-type="Label"/>
            <field-locator locator="OperationType" locator-type="Activity"></field-locator>
        </field>

        <field name="producerCount" locator="$.Metrics.counters.sendCounter.count" locator-type="Label"/>
        <field name="consumerCount" locator="$.Metrics.counters.consumeMessageCounter.count" locator-type="Label"/>

        <field name="MeanMessageSize" locator="$.Metrics.histograms.valueSize.mean" locator-type="Label"/>
        <field name="MeanKeySize" locator="$.Metrics.histograms.keySize.mean" locator-type="Label"/>

        <field name="MeanJitter" locator="$.Metrics.histograms.messageProducerJitter.mean" locator-type="Label"/>
    </parser>

    <parser name="SnapshotParser" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityMapParser" default-data-type="AsInput">
        <field name="EventName" locator="ObjectName" locator-type="Label"/>
        <field name="EventType" value="SNAPSHOT"/>
        <field name="EverythingElse" locator="*" locator-type="Label"/>
    </parser>

    <parser name="KafkaConsumerMetrics" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityJsonParser" default-data-type="AsInput">
        <field name="EventName" value="Kafka consumer metrics"/>
        <field name="EventType" value="EVENT"/>
        <embedded-activity name="beans" locator="$.[*]" locator-type="Label">
            <parser-ref name="SnapshotParser" aggregation="Join"/>
        </embedded-activity>
    </parser>

    <parser name="KafkaProducerMetrics" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityJsonParser" default-data-type="AsInput">
        <field name="EventName" value="Kafka producer metrics"/>
        <field name="EventType" value="EVENT"/>
        <embedded-activity name="beans" locator="$.[*]" locator-type="Label">
            <parser-ref name="SnapshotParser" aggregation="Join"/>
        </embedded-activity>
    </parser>

    <parser name="JvmMetricParser" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityJsonParser" default-data-type="AsInput">
        <field name="EventName" value="JVM metrics"/>
        <field name="EventType" value="EVENT"/>
        <embedded-activity name="beans" locator="$.[*]" locator-type="Label">
            <parser-ref name="SnapshotParser" aggregation="Join"/>
        </embedded-activity>
    </parser>

    <parser name="TNTJSONParser" class="com.jkoolcloud.tnt4j.streams.parsers.ActivityJsonParser" default-data-type="AsInput">
        <property name="ActivityDelim" value="EOF"/>
        <field name="ProcessId" locator="$.pid" locator-type="Label"/>
        <field name="ThreadId" locator="$.tid" locator-type="Label"/>

        <field name="InterceptionsMetricsData" locator="$.msg-text" locator-type="Label" transparent="true">
            <parser-ref name="KafkaInterceptMetricsParser" aggregation="Merge">
                <matchExp>JPATH:$.Topic</matchExp>
            </parser-ref>

            <parser-ref name="KafkaConsumerMetrics" aggregation="Merge">
                <matchExp>JPATH:$.['kafka.consumer:client-id=consumer-1-type=consumer-metrics']</matchExp>
            </parser-ref>

            <parser-ref name="KafkaProducerMetrics" aggregation="Merge">
                <matchExp>JPATH:$.['kafka.producer:id=console-producer-type=app-info']</matchExp>
            </parser-ref>

            <parser-ref name="JvmMetricParser" aggregation="Merge">
                <matchExp>JPATH:$.['java.lang:name=G1 Eden Space-type=MemoryPool']</matchExp>
            </parser-ref>
        </field>
    </parser>

    <parser name="KafkaMessageParser" class="com.jkoolcloud.tnt4j.streams.parsers.KafkaConsumerRecordParser">
        <field name="TNTEventData" locator="value" locator-type="Label" transparent="true">
            <parser-ref name="TNTJSONParser" aggregation="Merge"/>
        </field>
    </parser>

    <stream name="KafkaMetricsStream" class="com.jkoolcloud.tnt4j.streams.inputs.KafkaConsumerStream">
        <property name="HaltIfNoParser" value="false"/>
        <property name="Topic" value="tnt4j_kafka_interceptor_metrics"/>
        <!--<property name="FileName" value="./tnt4j-streams-kafka/config/intercept/consumer.properties"/>-->

        <!-- Kafka consumer properties -->
        <property name="bootstrap.servers" value="localhost:9092"/>
        <property name="group.id" value="0"/>
        <property name="key.deserializer" value="org.apache.kafka.common.serialization.StringDeserializer"/>
        <property name="value.deserializer" value="org.apache.kafka.common.serialization.StringDeserializer"/>

        <parser-ref name="KafkaMessageParser"/>
    </stream>
</tnt-data-source>
