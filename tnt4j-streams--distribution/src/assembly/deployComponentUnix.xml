<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://maven.apache.org/ASSEMBLY-COMPONENT/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/ASSEMBLY-COMPONENT/2.0.0 http://maven.apache.org/xsd/assembly-component-2.0.0.xsd">
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <binaries>
                <outputDirectory></outputDirectory>
                <unpack>false</unpack>
                <!--outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping-->
                <dependencySets>
                    <dependencySet>
                        <useProjectArtifact>false</useProjectArtifact>
                        <useTransitiveDependencies>true</useTransitiveDependencies>
                        <outputDirectory>lib</outputDirectory>
                        <unpack>false</unpack>
                        <excludes>
                            <exclude>${project.groupId}:*:*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
            <!-- NOTE: <sources> allows to copy anything from module dir to assembly -->
            <!-- module contents: samples, source/test/javadoc jars -->
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <!-- run scripts -->
                    <fileSet>
                        <outputDirectory>samples</outputDirectory>
                        <includes>
                            <include>**/*.*</include>
                        </includes>
                        <excludes>
                            <exclude>**/*.bat</exclude>
                            <exclude>**/*.cmd</exclude>
                            <exclude>**/*.sh</exclude>
                            <!-- binary content -->
                            <exclude>**/*.zip</exclude>
                            <exclude>**/*.gz</exclude>
                            <exclude>**/*.jar</exclude>
                            <exclude>**/*.7z</exclude>
                            <exclude>**/*.xls</exclude>
                            <exclude>**/*.xlsx</exclude>
                            <exclude>**/*.msg</exclude>
                            <exclude>**/*.mp</exclude>
                            <exclude>**/*.mmf</exclude>
                            <exclude>**/*.dump</exclude>
                            <exclude>**/*.dat</exclude>
                            <exclude>**/*.bin</exclude>
                            <exclude>**/*.exe</exclude>
                        </excludes>
                        <directory>samples</directory>
                        <lineEnding>unix</lineEnding>
                    </fileSet>
                    <fileSet>
                        <outputDirectory>samples</outputDirectory>
                        <includes>
                            <include>**/*.bat</include>
                            <include>**/*.cmd</include>
                        </includes>
                        <directory>samples</directory>
                        <lineEnding>crlf</lineEnding>
                    </fileSet>
                    <fileSet>
                        <outputDirectory>samples</outputDirectory>
                        <includes>
                            <include>**/*.sh</include>
                        </includes>
                        <directory>samples</directory>
                        <fileMode>0777</fileMode>
                        <lineEnding>unix</lineEnding>
                    </fileSet>
                    <!-- binary content -->
                    <fileSet>
                        <outputDirectory>samples</outputDirectory>
                        <includes>
                            <include>**/*.zip</include>
                            <include>**/*.gz</include>
                            <include>**/*.jar</include>
                            <include>**/*.7z</include>
                            <include>**/*.xls</include>
                            <include>**/*.xlsx</include>
                            <include>**/*.msg</include>
                            <include>**/*.mp</include>
                            <include>**/*.mmf</include>
                            <include>**/*.dump</include>
                            <include>**/*.dat</include>
                            <include>**/*.bin</include>
                            <include>**/*.exe</include>
                        </includes>
                        <directory>samples</directory>
                    </fileSet>
                    <!-- produced jars -->
                    <fileSet>
                        <outputDirectory></outputDirectory>
                        <directory>${project.build.directory}</directory>
                        <includes>
                            <!--<include>*.jar</include>-->
                            <include>*-sources.jar</include>
                            <include>*-tests.jar</include>
                            <include>*-javadoc.jar</include>
                            <include>*-all.jar</include>
                        </includes>
                        <excludes>
                            <exclude>original-*.jar</exclude>
                        </excludes>
                    </fileSet>
                    <!-- module configurations -->
                    <fileSet>
                        <directory>/config</directory>
                        <includes>
                            <include>**/*.*</include>
                        </includes>
                        <excludes>
                            <exclude>**/tnt4j*.properties</exclude>
                        </excludes>
                        <outputDirectory>config</outputDirectory>
                        <lineEnding>unix</lineEnding>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>

    <fileSets>
        <!-- run scripts -->
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <excludes>
                <exclude>**/*.bat</exclude>
                <exclude>**/*.cmd</exclude>
                <exclude>**/*.sh</exclude>
                <exclude>**/*.exe</exclude>
            </excludes>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>**/*.bat</include>
                <include>**/*.cmd</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>**/*.exe</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <!-- configuration property files -->
        <!-- NOTE: file gets not picked from module set! -->
        <fileSet>
            <directory>../tnt4j-streams-kafka/target/config</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>config</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>../config</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>config</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <!-- static content -->
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
            <outputDirectory></outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!-- JavaDocs -->
        <!--<fileSet>-->
        <!--<directory>../${project.build.directory}</directory>-->
        <!--<includes>-->
        <!--<include>*-javadoc.*</include>-->
        <!--</includes>-->
        <!--<outputDirectory>docs</outputDirectory>-->
        <!--<lineEnding>unix</lineEnding>-->
        <!--</fileSet>-->
    </fileSets>
</component>