<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>${project.build.finalName}-deploy</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory></baseDirectory>
    <fileSets>
        <!-- static content -->
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../config</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>LICENSE</include>
                <include>README.md</include>
            </includes>
            <outputDirectory></outputDirectory>
        </fileSet>

        <!-- JavaDocs -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>*.zip</include>
            </includes>
            <outputDirectory>docs</outputDirectory>
        </fileSet>

        <!-- module contents: samples -->
        <fileSet>
            <directory>../tnt4j-streams-core/samples</directory>
            <outputDirectory>samples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-flume-plugin/samples</directory>
            <outputDirectory>samples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-hdfs/samples</directory>
            <outputDirectory>samples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-jms/samples</directory>
            <outputDirectory>samples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-kafa/samples</directory>
            <outputDirectory>samples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-mqtt/samples</directory>
            <outputDirectory>samples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-wmq/samples</directory>
            <outputDirectory>samples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-zorka/samples</directory>
            <outputDirectory>samples</outputDirectory>
        </fileSet>

        <!-- module contents: binaries -->
        <fileSet>
            <directory>../tnt4j-streams-core/${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-flume-plugin/${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-hdfs/${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-jms/${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-kafa/${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-mqtt/${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-wmq/${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-zorka/${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>